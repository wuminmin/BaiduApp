<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/shineng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="@string/shineng"
            android:textSize="20sp"
            android:textColor="@color/shineng"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/shiwai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="@string/shiwai"
            android:textSize="20sp"
            android:textColor="@color/shiwai"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <WebView
        android:id="@+id/shinengWebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <WebView
        android:id="@+id/shiwaiWebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
