<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shopone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="正宗重庆麻辣烫"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/iv_pei"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/pei" />

                <ImageView
                    android:id="@+id/iv_fu"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fu" />

                <ImageView
                    android:id="@+id/iv_piao"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/piao" />

                <ImageView
                    android:id="@+id/iv_quan"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/quan" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_star012"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_no"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_half"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_full"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star034"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_no"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_half"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_full"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star056"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_no"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star5"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_half"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star6"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_full"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star078"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_no"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/iv_star7"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_half"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star8"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_full"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star0910"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_no"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/iv_star9"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_half"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_star10"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/businesslistings_list_icon_star_full"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_sell"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:text="已经售卖111份" />

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:text="999m" />
                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_way"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="起送20¥|配送5¥|平均45分钟" />


        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:id="@+id/ly_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightbackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/waimai_shoplist_item_icon_jian"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:layout_height="15dp"
            android:textSize="10sp"
            android:text="满30元减12元(在线支付专享)"/>

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:id="@+id/ly_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightbackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/waimai_shoplist_item_icon_mian"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_height="15dp"
                android:textSize="10sp"
                android:text="免外送费(在线支付专享)"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightbackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/waimai_shoplist_item_icon_jian"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_height="15dp"
                android:textSize="10sp"
                android:text="满50元减12元(在线支付专享)"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/waimai_shoplist_item_icon_mian"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:layout_height="15dp"
                android:textSize="10sp"
                android:text="免外送费(在线支付专享)"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/waimai_shoplist_item_icon_juan"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="5dp"
                android:layout_height="15dp"
                android:textSize="10sp"
                android:text="满100元送10元代金券"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>